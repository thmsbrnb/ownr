{% set support_items = [
        {
            "label": "product",
            "path": "locations"
        },
        {
            "label": "services",
            "path": "services"
        },
        {
            "label": "contact"
        },
        {
            "label": "about"
        }
] %}

{% set legal_items = [
        {
            "label": "privacy policy"
        },
        {
            "label": "terms of service"
        },
        {
            "label": "copyright"
        }
] %}

{% set socials_items = [
        {
            "label": "facebook",
            "path": "http://www.facebook.com"
        },
        {
            "label": "instagram",
            "path": "http://www.instagram.com"
        },
        {
            "label": "linkedin",
            "path": "http://www.linkedin.com"
        },
        {
            "label": "youtube",
            "path": "http://www.youtube.com"
        }
] %}

<footer class="footer">
    <div class="footer_container container grid">
        <div class="footer_content footer_content--1">
            <div class="logo">
                <img src="../../assets/logo.svg">
            </div>
            <p class="footer_subtitle">
            We help you find the perfect home for you and your loved ones with our 
            wide selection of properties and market-leading services.
        </p>
        </div>
        <div class="footer_content footer_content--2 flex">
            <ul class="list is-support">
                <li class="list_itemTitle">support</li>
                {% for item in support_items %}
                    <li class="list_item">
                        <a href="{{ item.path ? "#" ~ item.path : "" }}">{{ item.label }}</a>
                    </li>
                {% endfor %}
            </ul>
            <ul class="list is-legal">
                <li class="list_itemTitle">legal</li>
                {% for item in legal_items %}
                    <li class="list_item">
                        <a href="#!">{{ item.label }}</a>
                    </li>
                {% endfor %}
            </ul>
            <ul class="list is-socials">
                <li class="list_itemTitle">social medias</li>
                {% for item in socials_items %}
                    <li class="list_item">
                        <a href="{{ item.path ? item.path : "" }}" target="_blank">{{ item.label }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</footer>